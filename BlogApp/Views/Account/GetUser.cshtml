@model BlogApp.Models.Entity.Tbl_User
@{
    ViewBag.Title = "GetUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "Account", FormMethod.Post))
{
<div class="form-group">

    @Html.LabelFor(m => m.UserId)
    @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", ReadOnly = "true" })

    <br />

    @Html.LabelFor(m => m.UserName)
    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })

    <br />

    @Html.LabelFor(m => m.UserPassword)
    @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control", type = "password" })

    <br />

    @Html.LabelFor(m => m.UserRole)
    @Html.TextBoxFor(m => m.UserRole, new { @class = "form-control" })

</div>

    <br />

    <div>
        <button class="btn btn-primary">Save</button>
    </div>
}